<div class="modal fade" id="EmailModal" tabindex="-1" role="dialog" aria-labelledby="emailModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emailModalLabel">Insira o e-mail que será enviado o link</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" name="email" class="form-control" placeholder="Email" id="inptEmail">
            </div>
            <h5 id="erroEmail"></h5>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary mr-1" onclick="SendEmail('@Url.Action("SendEmail", "Item")')" id="btnShareEmail">Compartilhar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>