@using (Ajax.BeginForm("SaveItem", "Item", new AjaxOptions() { UpdateTargetId = "itemSortable", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
{
    <div class="modal fade" id="addEditItemModal" tabindex="-1" role="dialog" aria-labelledby="itemModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="itemModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="itemId" id="inptItemId" value="" />
                    <input type="hidden" name="inptParentItemId" id="inptParentItemId" value="" />
                    <div class="form-group">
                        <label for="inptDescription">Descrição</label>
                        <input type="text" name="description" class="form-control" placeholder="Insira a descrição" id="inptDescription">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default mr-1" onclick="CloseModal('addEditItemModal')" id="btnConvertItem" name="ButtonType" value="Convert">Converter para item principal</button>
                    <button type="submit" class="btn btn-primary mr-1" onclick="CloseModal('addEditItemModal')" id="btnSaveItem" name="ButtonType" value="Save">Salvar</button>
                    <button type="submit" class="btn btn-danger mr-1 d-none" onclick="CloseModal('addEditItemModal')" id="btnRemoveItem" name="ButtonType" value="Remove">Remover</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}